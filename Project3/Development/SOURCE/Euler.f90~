program Euler
  implicit none

  real(8) ::Tmax=100
  real(8), parameter :: PI=3.14
  integer ::Num=100
  real(8) :: h
  real(8), dimension(Num+1)::vx,vy,x,y,r
  integer :: i

  h=Tmax/Num

  x(1)=1.d0
  y(1)=0.d0
  vx(1)=1.d-3
  vy(1)=0.999

  do i=1,Num
     vx(i+1) = vx(i)-((h*4*PI*PI*x(i))/((x(i)*x(i)+y(i)*y(i))**(3.d0/2.d0)))
     x(i+1) = x(i) + h*vx(i)
     vy(i+1) = vy(i)-((h*4*PI*PI*y(i))/((x(i)*x(i)+y(i)*y(i))**(3.d0/2.d0)))
     y(i+1) = y(i) + h*vy(i)    
  end do
  


  
  return
end program Euler
